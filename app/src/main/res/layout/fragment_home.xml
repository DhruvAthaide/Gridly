<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="0dp">

    <!-- Hero Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/heroCard"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/bg_hero_card"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/nextRaceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT GRAND PRIX"
            android:textColor="#FFFFFF"
            android:alpha="0.8"
            android:fontFamily="sans-serif-condensed"
            android:letterSpacing="0.1"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/raceTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="MONACO GP"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nextRaceLabel" />
            
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_timer"
                app:tint="#FFFFFF"
                android:layout_marginEnd="8dp"/>
                
            <TextView
                android:id="@+id/countdownText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02d 14h 33m"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="monospace"/>
        </LinearLayout>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_trophy"
            app:tint="#FFFFFF"
            android:alpha="0.1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:rotation="-15"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Schedule Section -->
    <TextView
        android:id="@+id/scheduleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WEEKEND SCHEDULE"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heroCard"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/scheduleLabel"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- FP1 -->
        <include layout="@layout/item_schedule_row_modern" android:id="@+id/row_fp1"/>
        <!-- FP2 -->
        <include layout="@layout/item_schedule_row_modern" android:id="@+id/row_fp2"/>
        <!-- Quali -->
        <include layout="@layout/item_schedule_row_modern" android:id="@+id/row_quali"/>
        <!-- Race -->
        <include layout="@layout/item_schedule_row_modern" android:id="@+id/row_race"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
